<Window x:Class="QuickPing2.SplashScreen.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickPing2.SplashScreen"
        mc:Ignorable="d"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Window1" Height="200" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="15"/>
            <RowDefinition Height="20"/>
        </Grid.RowDefinitions>

        <Image 
            Grid.Row="0"
            Grid.RowSpan="2"
            Source="C:\Users\lagac\source\repos\QuickPing2\Assets\splash.jpg"
            Stretch="Fill"/>

        <TextBlock x:Name="LoadingState"
                   Grid.Row="1"
                   Text="Initation..."
                   FontFamily="Arial Noval"
                   Foreground="White"
                   FontWeight="Bold"/>

        <Rectangle x:Name="LoadingBar"
                   Grid.Row="2"
                   Width="600"
                   Fill="Green"/>

    </Grid>
</Window>
